# Core
ENV=development
API_PREFIX=/api

# Broker / Result backend
BROKER_URL=redis://localhost:6379/0
RESULT_BACKEND=redis://localhost:6379/1

# Storage
STORAGE_DIR=storage

# Engines (dummy|whispercpp|openai|deepgram, dummy|marianmt|nllb|deepl, dummy|coqui|elevenlabs|openvoice|bark)
TRANSCRIPTION_ENGINE=dummy
TRANSLATION_ENGINE=dummy
TTS_ENGINE=dummy

# Optional: Postgres (planned)
POSTGRES_DSN=postgresql+psycopg2://videodubber:videodubber@localhost:5432/videodubber

# Optional: S3/MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY={{MINIO_ACCESS_KEY}}
MINIO_SECRET_KEY={{MINIO_SECRET_KEY}}
MINIO_SECURE=false
MINIO_BUCKET=open-dubber

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
